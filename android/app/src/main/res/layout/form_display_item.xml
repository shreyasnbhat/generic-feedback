<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/card_frame"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="8dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/circle_ui_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/circle_drawable"
            android:gravity="center"
            android:text="K"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/form_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/circle_ui_element"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="Kaushalya Feedback"
            android:textColor="@color/blue_grey_700"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/form_title_sub_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/form_title_text"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:text="SubText"

            />

    </RelativeLayout>
</android.support.v7.widget.CardView>