<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lnt.feedback.activities.AdminActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:id="@+id/user_id"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:hint="Enter User ID"
                android:background="@color/deep_orange_900"
                android:textStyle="bold"
                android:text="User ID"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_id_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:hint="Nothing"
                android:padding="8dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_700"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:id="@+id/user_name"
        android:layout_below="@+id/user_id"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:background="@color/deep_orange_900"
                android:textStyle="bold"
                android:text="Name"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:hint="Nothing"
                android:padding="8dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_700"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:id="@+id/user_phone"
        android:layout_below="@+id/user_email"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:background="@color/deep_orange_900"
                android:textStyle="bold"
                android:text="Mobile Number"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_phone_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:hint="Nothing"
                android:maxLength="10"
                android:padding="8dp"
                android:inputType="number"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_700"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:id="@+id/user_email"
        android:layout_below="@+id/user_name"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:padding="8dp"
                android:background="@color/deep_orange_900"
                android:textStyle="bold"
                android:text="Email"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/user_email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:hint="Nothing"
                android:padding="8dp"
                android:inputType="textEmailAddress"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_700"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/user_phone"
        android:id="@+id/add_user"
        android:text="Add User"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/clear"
        android:text="Erase Login Session"
        android:textSize="18sp"
        />

</RelativeLayout>
